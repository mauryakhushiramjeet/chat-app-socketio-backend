generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  image String?
  messageSent Messages[] @relation("setMessage")
 messageReciev Messages[] @relation("recievMessage")
  createdAt DateTime @default(now())
}

 model Messages{
  id Int @id @default(autoincrement())
  text String
  sender User @relation("setMessage",fields: [senderId],references: [id])
  receiver  User @relation("recievMessage",fields: [receiverId ],references: [id])
  senderId Int
  receiverId Int
  createdAt DateTime @default(now())

 }