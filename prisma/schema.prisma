generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int                @id @default(autoincrement())
  name          String
  email         String             @unique
  password      String
  image         String?
  about         String?
  groupMember   GroupMembers[]
  groupMessage  GroupMessage[]
  messageSent   Messages[]         @relation("setMessage")
  messageReciev Messages[]         @relation("recievMessage")
  currentUser   ChatConversation[] @relation("currentUser")
  ChatUser      ChatConversation[] @relation("chatUser")
  LastActiveAt  DateTime?
  createdAt     DateTime           @default(now())
}

enum Status {
  Pending
  Send
  Delivered
  Read
}

model Messages {
  id            Int      @id @default(autoincrement())
  text          String?
  sender        User     @relation("setMessage", fields: [senderId], references: [id])
  receiver      User     @relation("recievMessage", fields: [receiverId], references: [id])
  senderId      Int
  receiverId    Int
  deletedByMeId Int?
  status        String   @default("Pending")
  deletedForAll Boolean  @default(false)
  createdAt     DateTime @default(now())
}

model ChatConversation {
  id                   Int      @id @default(autoincrement())
  currentUserId        Int
  chatUserId           Int
  currentUser          User     @relation("currentUser", fields: [currentUserId], references: [id])
  chatUser             User     @relation("chatUser", fields: [chatUserId], references: [id])
  lastMessage          String
  lastMessageCreatedAt DateTime @default(now())
}

model Group {
  id           Int            @id @default(autoincrement())
  name         String
  image        String?
  groupMembers GroupMembers[]
  messages     GroupMessage[]
  createdAt    DateTime       @default(now())
}

model GroupMembers {
  id      Int      @id @default(autoincrement())
  userId  Int
  groupId Int
  admin   Boolean? @default(false)
  user    User     @relation(references: [id], fields: [userId])
  group   Group    @relation(references: [id], fields: [groupId])
}

model GroupMessage {
  id        Int      @id @default(autoincrement())
  text      String
  groupId   Int
  userId    Int
  sender    User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
  createdAt DateTime @default(now())
}

